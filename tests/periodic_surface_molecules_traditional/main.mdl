   COUNT[sm,Scene.Plane[sr_inner]]}=> "./sm.total.dat"
  {COUNT[sm,Scene.Plane[sr_outer]]}=> "./sm.outer.dat"
  {COUNT[sm,Scene.Plane[sr_inner]]}=> "./sm.inner.dat"
